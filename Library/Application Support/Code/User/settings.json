{
  // Editor settings
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelScrollSensitivity": 0.7,
  "editor.renderWhitespace": "boundary",
  "editor.showDeprecated": true,
  "editor.smoothScrolling": true,
  "editor.unicodeHighlight.allowedCharacters": {
    "â€™": true
  },

  "diffEditor.renderSideBySide": false,

  "explorer.confirmDelete": false,

  "search.quickOpen.history.filterSortOrder": "recency",

  "window.title": "[${rootName}]${separator}${activeEditorMedium}",

  "workbench.colorTheme": "Default Dark+",
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.empty.hint": "hidden",

  // Format on save!
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 0,
  "files.insertFinalNewline": true,

  // VCS
  "git.openRepositoryInParentFolders": "always",
  "snowflake.connectionsConfigFile": "/Users/kos/.snowflake/connections.toml",

  // Global ignores
  "files.exclude": {
    ".aider.chat.history.md": true,
    ".test_durations": true,
    "**/__pycache__": true,
    "node_modules": true,
    "terraform.tfstate*": true
  },

  // Agents and shenanigans
  "redhat.telemetry.enabled": false,
  "github.copilot.enable": {
    "*": false
  },

  // Language specific
  "[markdown]": {
    "editor.formatOnSave": false
    // "editor.unicodeHighlight.ambiguousCharacters": false,
    // "editor.unicodeHighlight.invisibleCharacters": false,
    // "diffEditor.ignoreTrimWhitespace": false,
    // "editor.wordWrap": "on",
    // "editor.quickSuggestions": true
  },
  "xml.format.preserveAttributeLineBreaks": false,
  "[yaml]": {
    "editor.formatOnSave": false
  },

  // Language specific - Python
  "black-formatter.importStrategy": "fromEnvironment",
  "isort.args": ["--src-path", "."],
  "jupyter.jupyterCommandLineArguments": [],
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.enablePytestSupport": false,
  "python.analysis.extraPaths": ["/Users/kos/mono"],
  "python.analysis.typeCheckingMode": "standard",
  "python.testing.pytestArgs": ["-vv"],
  "jupyter.askForKernelRestart": false,

  "[python]": {
    "editor.formatOnSave": true,
    "editor.indentSize": 4,
    // Ruff as default
    "editor.defaultFormatter": "charliermarsh.ruff"

    // Black + isort for specific apps
    // "editor.defaultFormatter": "ms-python.black-formatter",
    // isort on specific repos only
    // "editor.codeActionsOnSave": {
    //   "source.fixAll": "explicit",
    //   "source.organizeImports": "explicit"
    // }
  },

  // Language specific - web languages
  "js/ts.implicitProjectConfig.checkJs": true,

  // Prettier for everything
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  }
}
